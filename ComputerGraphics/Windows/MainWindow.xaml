<Window x:Class="ComputerGraphics.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="MainWindow"
        MinHeight="512" Height="512" MinWidth="910" Width="910">

    <Grid x:Name="Grid" Background="#B8B8B8">
        <Menu Height="18" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый сигнал" Click="NewSignal_OnClick" />
                <MenuItem Header="Открыть" Click="Open_OnClick" />
                <MenuItem Header="Сохранить" Click="Save_OnClick" />
            </MenuItem>
            <MenuItem Header="Информация о сигнале" Click="Information_OnClick" />
            <MenuItem Header="Моделирование" Click="Simulation_OnClick" />
        </Menu>
    </Grid>
</Window>