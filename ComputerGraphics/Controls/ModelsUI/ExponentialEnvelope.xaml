<UserControl x:Class="ComputerGraphics.Controls.ModelsUI.ExponentialEnvelope"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Введите амплитуду" />
        <TextBox Grid.Row="1" Name="ParameterA">1</TextBox>
        <TextBlock Grid.Row="2" Text="Введите ширину огибающей" />
        <TextBox Grid.Row="3" Name="ParameterR">250</TextBox>
        <TextBlock Grid.Row="4" Text="Введите частоту несущей" />
        <TextBox Grid.Row="5" Name="ParameterF">2000</TextBox>
        <TextBlock Grid.Row="6" Text="Введите начальную фазу [0;2pi]" />
        <TextBox Grid.Row="7" Name="ParameterFi">0</TextBox>
    </Grid>
</UserControl>