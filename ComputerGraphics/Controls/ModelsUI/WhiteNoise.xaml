<UserControl x:Class="ComputerGraphics.Controls.ModelsUI.WhiteNoise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ComputerGraphics.Controls.ModelsUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width='*'/>
            <ColumnDefinition Width='*'/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="TextA" Grid.Column="0" Height="20" Foreground="Gray" Text="Введите нижнюю границу" Margin="3" 
                  PreviewTextInput="TextBoxBase_OnTextChanged"/>
        <TextBox x:Name="TextB" Grid.Column="1" Height="20" Foreground="Gray" Text="Введите верхнюю границу" Margin="3"
                 PreviewTextInput="TextBoxBase_OnTextChanged"/>
    </Grid>
    
</UserControl>
