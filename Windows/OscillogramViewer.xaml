<Window x:Class="ComputerGraphics.Windows.OscillogramViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ComputerGraphics.Windows"
        mc:Ignorable="d"
        Title="OscillogramViewer" Height="450" Width="800" Closed="OscillogramViewer_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalAlignment="Top">
            <Button Height="30">
                <Image Source="..\..\image\lupPlus.png" />
            </Button>
            <Button Height="30">
                <Image Source="..\..\image\lupMinus.png" />
            </Button>
            <Button Height="30">
                <Image Source="..\..\image\reverse.png" />
            </Button>
        </Menu>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="Panel" />
        </ScrollViewer>
    </Grid>
</Window>