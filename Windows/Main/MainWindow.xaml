<Window x:Class="ComputerGraphics.Windows.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGraphics.Windows.MainWindow"
        mc:Ignorable="d"
        Title="DSP" Height="450" Width="800" Background="DarkGray">
    <Window.DataContext>
        <local:MainWindowModel />
    </Window.DataContext>

    <Grid>

        <Menu Height="18" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="Open_Click" />
                <MenuItem Header="Открыть последний файл" Click="TestClick" />
                <MenuItem Header="Сохранить" />
            </MenuItem>
            <MenuItem Header="Вид" Click="TestDown" />
            <MenuItem Header="Инструменты">
                <MenuItem Header="Информация" Click="Information_OnClick" />
            </MenuItem>

            <MenuItem Header="Окна">
                <MenuItem Header="Test" Click="MenuItem_OnClick" IsEnabled="{Binding Path=Check}" />
            </MenuItem>

            <MenuItem Header="О программе">
                <MenuItem Header="Разработчики" Click="AboutProgramm_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>